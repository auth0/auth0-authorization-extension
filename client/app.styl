@import "../node_modules/auth0-styleguide/lib/vars";

// Overwrite manage styles default button margin
.alert .btn
  padding-top 5px
  padding-bottom 5px

// Overwrite overflow hidden styles for modal
.modal-overflow-visible
  .modal-dialog,
  .modal-dialog .modal-content,
  .modal-dialog .modal-body
    overflow visible

// Overwrite modal buttons height

.modal-dialog
  .modal-footer .btn
    padding-top 16px
    padding-bottom 16px
    margin-left 16px

    &:first-child
      margin-left 0

  .modal-description
    text-align center
    color $color-text-light
    margin-bottom 30px
