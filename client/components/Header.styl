.extension-header
  position fixed
  top 0
  left 0
  right 0
  height 70px
  z-index 99
  background-color white

  .navbar
    border-radius 0
    background-color transparent
    border 0
    border-bottom 1px solid #f1f1f1
    margin-bottom 40px

  .navbar-right > li
    display inline-block
    font-size 13px
    margin-top 22px
    margin-left 25px

  .btn-username
    cursor pointer

    .avatar
      height 24px
      width 24px
      border-radius 50%
      margin-right 10px

    .toggle-icon
      position relative
      top 3px
      margin-left 8px

.extension-header-logo
  height 70px
  float left

  .auth0-logo
    display inline-block
    background-image url('http://cdn.auth0.com/styleguide/latest/lib/logos/img/logo-blue.svg')
    background-size contain
    background-repeat no-repeat
    width 81px
    height 70px
    background-position center, center
    float left
    margin-right 12px

  .extension-name
    margin 0
    display inline-block
    font-size 19px
    color #16214D
    line-height 70px

.no-content-section
  text-align center

  .title
    font-weight 500
    margin-bottom 40px

  .section-icon
    font-size 84px
    color #0a86b1
    opacity 0.2

  .description
    display block
    max-width 440px
    margin 0 auto
    margin-bottom 60px

  .button-container .btn + .btn
    margin-left 20px

.extension-section-header
  margin-bottom 24px

  .title-container
    position relative

  .buttons-container
    position absolute
    top 50%
    right 0
    transform translateY(-50%)

    .btn + .btn
      margin-left 14px

  .title
    margin 0
    margin-bottom 30px

  .description
    margin 0
