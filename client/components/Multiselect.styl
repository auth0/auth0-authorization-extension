@import "../../node_modules/auth0-styleguide/lib/vars";

// Overwrite default react-select styles

.react-multiselect

  &.is-focused:not(.is-open) > .Select-control
    border 1px solid #66afe9
    box-shadow inset 0 1px 1px rgba(0,0,0,0.075), 0 0 8px rgba(102,175,233,0.6)

  .Select-control
    height 46px

  .Select-placeholder
    line-height 46px

  .Select-value-icon
    border-right 1px solid rgba(black, 0.1)

    &:hover
      color black
      background-color rgba(black, 0.1)

  .Select-value
    margin-left 10px
    margin-top 9px
    color currentColor
    border none
    background-color rgba(black, 0.05)
    line-height 2

    .Select-value-label
      padding-left 10px
      padding-right 10px
      font-size 12px

  .Select-input
    height 46px
    line-height 46px
